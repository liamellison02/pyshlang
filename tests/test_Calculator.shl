import
    cli

fn main() = {
    display("Simple Calculator")
    display("----------------")
    
    var num1 = read("Enter first number: ")
    var num2 = read("Enter second number: ")
    
    display("1. Add")
    display("2. Subtract")
    display("3. Multiply")
    display("4. Divide")
    var choice = read("Enter operation (1-4): ")
    
    if choice == "1" {
        display(num1 + " + " + num2 + " = " + (num1 + num2))
    } else if choice == "2" {
        display(num1 + " - " + num2 + " = " + (num1 - num2))
    } else if choice == "3" {
        display(num1 + " * " + num2 + " = " + (num1 * num2))
    } else if choice == "4" {
        display(num1 + " / " + num2 + " = " + (num1 / num2))
    } else {
        display("Invalid choice")
    }
}
