import
    cli

fn main() = {
    display("Loop Examples")
    display("------------")
    
    // For loop example
    display("Counting from 1 to 5:")
    for var i = 1; i <= 5; i = i + 1 {
        display(i)
    }
    
    // While loop example
    display("\nWhile loop countdown:")
    var count = 5
    while count > 0 {
        display(count)
        count = count - 1
    }
    
    // For-in loop example with a collection
    display("\nIterating through items:")
    var items = ["apple", "banana", "cherry", "date"]
    for item in items {
        display(item)
    }
}
