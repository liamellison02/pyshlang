import
    cli

fn main() = {
    display("String Manipulation Examples")
    display("--------------------------")
    
    var firstName = read("Enter your first name: ")
    var lastName = read("Enter your last name: ")
    
    // String concatenation
    var fullName = firstName + " " + lastName
    display("Full name: " + fullName)
    
    // String length
    var nameLength = length(fullName)
    display("Your name has " + nameLength + " characters")
    
    // String transformation
    display("Uppercase: " + uppercase(fullName))
    display("Lowercase: " + lowercase(fullName))
    
    // String substring
    if length(firstName) > 3 {
        var nickname = substring(firstName, 0, 3)
        display("Your nickname could be: " + nickname)
    }
    
    // String replacement
    var sentence = "Hello, world!"
    var newSentence = replace(sentence, "world", fullName)
    display(newSentence)
}
